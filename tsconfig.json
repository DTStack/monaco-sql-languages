{
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./src",
		"target": "es6",
		"module": "esnext",
		"lib": ["ES2020", "DOM"],
		"noEmit": true,
		"allowJs": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src/**/*"]
}
